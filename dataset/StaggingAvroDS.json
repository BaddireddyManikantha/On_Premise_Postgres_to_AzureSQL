{
	"name": "StaggingAvroDS",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureDataLakeStorageLS",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"schema_name": {
				"type": "String"
			},
			"table_name": {
				"type": "String"
			}
		},
		"folder": {
			"name": "Retail"
		},
		"annotations": [],
		"type": "Avro",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@dataset().table_name",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@concat(utcNow('yyyy-MM-dd'),'/',dataset().schema_name)",
					"type": "Expression"
				},
				"fileSystem": "stagging"
			}
		},
		"schema": []
	}
}